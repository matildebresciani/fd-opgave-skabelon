---
import Services from "../components/Services.astro";
import Button from "../components/Button.astro";
---

<section class="hero">
  <!-- Markup her -->
  <div class="dot-pattern">
    <img src="img/dot-pattern.svg" alt="" />
  </div>
  <div class="text">
    <h1>Empowering Your Business Growth</h1>
    <p>
      Discover tailored strategies and expert insights to take your business to
      the next level. Let us help you navigate challenges and achieve
      sustainable success.
    </p>
    <Button variant="white">Book a meeting</Button>
  </div>
  <div class="hero-img">
    <img src="img/hero.png" alt="" />
  </div>
  <div class="cards">
    <Services />
  </div>
</section>

<style>
  /* Styles her */

  .hero {
    grid-column: full;
    display: grid;
    grid-template-columns: subgrid;
    grid-template-rows: auto 1fr 1fr;
    padding: 0;
    margin: 0;

    &::before {
      content: "";
      grid-column: full;
      grid-row: 1/3;
      background-color: var(--primary-color-03);
    }

    h1,
    p {
      color: var(--secondary-color-02);
    }
  }

  img {
    border-radius: 0;
  }

  .text {
    padding-block: var(--space-l);
    p {
      margin-top: 1.25rem;
    }

    :last-child {
      margin-top: 1.8rem;
    }
  }

  @media (max-width: 768px) {
    .hero {
      display: grid;
      grid-template-columns: 1fr;
      grid-template-rows: auto auto auto;

      * {
        max-width: 100vw;
      }

      .hero-img {
        grid-row: 1/2;
      }

      .tekst {
        grid-row: 2/3;
      }

      .cards {
        grid-row: 3;
      }

      .dot-pattern {
        display: none;
      }
    }
  }

  @media (min-width: 768px) {
    .text {
      grid-column: content/middle;
      grid-row: 1;
      align-self: center;
    }

    .hero-img {
      grid-column: middle/full;
      grid-row: 1/3;
    }

    .cards {
      grid-column: content;
      grid-row: 2/4;
    }

    .dot-pattern {
      grid-column: full/content;
      grid-row: 1;
      width: 4.9rem;
      height: 20rem;
      align-self: center;
    }
  }
</style>
